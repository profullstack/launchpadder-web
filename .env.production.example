# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Application Configuration
NODE_ENV=production
PORT=3000
PUBLIC_APP_URL=https://your-domain.com
LOG_LEVEL=info

# Supabase Configuration (Cloud or Self-hosted)
# For Supabase Cloud:
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# For Self-hosted Supabase (Docker):
# PUBLIC_SUPABASE_URL=https://your-domain.com
# PUBLIC_SUPABASE_ANON_KEY=your-self-hosted-anon-key-here
# SUPABASE_SERVICE_ROLE_KEY=your-self-hosted-service-role-key-here

# Database Configuration (for self-hosted Supabase only)
# POSTGRES_HOST=db
# POSTGRES_PORT=5432
# POSTGRES_DB=postgres
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your-secure-postgres-password-here

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
# For Redis with password: redis://:password@localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
NEXTAUTH_SECRET=your-nextauth-secret-here

# External Services
OPENAI_API_KEY=sk-your-openai-api-key-here
STRIPE_SECRET_KEY=sk_live_your-stripe-live-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret-here

# Email Configuration (Mailgun)
MAILGUN_API_KEY=your-mailgun-api-key-here
MAILGUN_DOMAIN=mg.your-domain.com
MAILGUN_FROM_EMAIL=noreply@your-domain.com
MAILGUN_FROM_NAME=LaunchPadder

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_MESSAGING_SERVICE_SID=your-messaging-service-sid-here

# Crypto Payment Configuration
BITCOIN_WALLET_ADDRESS=your-bitcoin-wallet-address
ETHEREUM_WALLET_ADDRESS=your-ethereum-wallet-address
SOLANA_WALLET_ADDRESS=your-solana-wallet-address
USDC_WALLET_ADDRESS=your-usdc-wallet-address

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT=10
LOGIN_RATE_LIMIT=5

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_DIR=/app/uploads

# Feature Flags
ENABLE_FEDERATION=true
ENABLE_AI_ENHANCEMENT=true
ENABLE_CRYPTO_PAYMENTS=true
ENABLE_MONITORING=true
ENABLE_ANALYTICS=true

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# CDN Configuration
CDN_URL=https://cdn.your-domain.com
STATIC_ASSETS_URL=https://static.your-domain.com

# Performance Monitoring
SENTRY_DSN=your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key-here

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here

# SSL/TLS Configuration (for self-hosted)
SSL_CERT_PATH=/etc/ssl/certs/launchpadder.crt
SSL_KEY_PATH=/etc/ssl/certs/launchpadder.key

# Monitoring and Observability (for self-hosted)
GRAFANA_PASSWORD=your-secure-grafana-password-here
PROMETHEUS_RETENTION_TIME=30d

# Kong API Gateway (for self-hosted)
KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your-secure-dashboard-password-here

# Studio Configuration (for self-hosted Supabase)
STUDIO_PORT=3001
STUDIO_DEFAULT_ORGANIZATION=LaunchPadder
STUDIO_DEFAULT_PROJECT=Production

# Additional Supabase Configuration (for self-hosted)
SUPABASE_PUBLIC_URL=https://your-domain.com
REALTIME_SECRET_KEY_BASE=your-secure-realtime-secret-key-base-here
PGRST_DB_SCHEMAS=public,auth,storage,realtime

# Image Processing
IMGPROXY_ENABLE_WEBP_DETECTION=true

# Docker Configuration (for self-hosted)
DOCKER_SOCKET_LOCATION=/var/run/docker.sock