# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Application Configuration
NODE_ENV=production
SITE_URL=https://your-domain.com
API_EXTERNAL_URL=https://your-domain.com
WEB_PORT=3000
LOG_LEVEL=info

# Database Configuration
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=launchpadder
POSTGRES_PASSWORD=your-secure-postgres-password-here

# Supabase Configuration
SUPABASE_URL=https://your-domain.com/supabase
ANON_KEY=your-production-anon-key-here
SERVICE_ROLE_KEY=your-production-service-role-key-here
JWT_SECRET=your-production-jwt-secret-here
JWT_EXPIRY=3600

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://:your-secure-redis-password-here@redis:6379

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/launchpadder.crt
SSL_KEY_PATH=/etc/ssl/certs/launchpadder.key
SSL_DHPARAM_PATH=/etc/ssl/certs/dhparam.pem

# External Services
OPENAI_API_KEY=your-openai-api-key-here
STRIPE_SECRET_KEY=sk_live_your-stripe-live-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret-here
COINGECKO_API_KEY=your-coingecko-api-key-here

# Email Configuration
SMTP_HOST=your-smtp-host.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_ADMIN_EMAIL=admin@your-domain.com
SMTP_SENDER_NAME=LaunchPadder

# Authentication Configuration
ENABLE_EMAIL_SIGNUP=true
ENABLE_ANONYMOUS_USERS=false
ENABLE_EMAIL_AUTOCONFIRM=false
DISABLE_SIGNUP=false
ADDITIONAL_REDIRECT_URLS=https://your-domain.com/auth/callback

# Kong API Gateway
KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your-secure-dashboard-password-here

# Monitoring and Observability
GRAFANA_PASSWORD=your-secure-grafana-password-here
PROMETHEUS_RETENTION_TIME=30d
LOGFLARE_API_KEY=your-logflare-api-key-here

# Security Configuration
REALTIME_SECRET_KEY_BASE=your-secure-realtime-secret-key-base-here
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT=10
LOGIN_RATE_LIMIT=5

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_DIR=/app/uploads

# Feature Flags
ENABLE_FEDERATION=true
ENABLE_AI_ENHANCEMENT=true
ENABLE_CRYPTO_PAYMENTS=true
ENABLE_MONITORING=true
ENABLE_ANALYTICS=true

# Image Processing
IMGPROXY_ENABLE_WEBP_DETECTION=true

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# CDN Configuration
CDN_URL=https://cdn.your-domain.com
STATIC_ASSETS_URL=https://static.your-domain.com

# Performance Monitoring
SENTRY_DSN=your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key-here
DATADOG_API_KEY=your-datadog-api-key-here

# Docker Configuration
DOCKER_SOCKET_LOCATION=/var/run/docker.sock

# Studio Configuration
STUDIO_PORT=3001
STUDIO_DEFAULT_ORGANIZATION=LaunchPadder
STUDIO_DEFAULT_PROJECT=Production

# Database Schema Configuration
PGRST_DB_SCHEMAS=public,auth,storage,realtime

# Supabase Services Configuration
SUPABASE_PUBLIC_URL=https://your-domain.com/supabase