# Test Environment Configuration
# Copy this file to .env.test and update with your test environment values

# Supabase Configuration
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-test-anon-key-here
SUPABASE_SERVICE_KEY=your-test-service-key-here

# Database Configuration
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# Application Configuration
TEST_BASE_URL=http://localhost:3000
NODE_ENV=test

# Test Configuration
VERBOSE_TESTS=false
TEST_TIMEOUT=20000

# External Service Configuration (for mocking)
OPENAI_API_KEY=test-openai-key
STRIPE_SECRET_KEY=sk_test_your-stripe-test-key
STRIPE_WEBHOOK_SECRET=whsec_test_webhook_secret

# Email Configuration (for testing)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test

# Redis Configuration (if used)
REDIS_URL=redis://localhost:6379/1

# Feature Flags for Testing
ENABLE_FEDERATION=true
ENABLE_AI_ENHANCEMENT=true
ENABLE_CRYPTO_PAYMENTS=true
ENABLE_MONITORING=true

# Security Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-only
ENCRYPTION_KEY=test-encryption-key-32-characters

# Rate Limiting (relaxed for testing)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./test/uploads

# Logging Configuration
LOG_LEVEL=error
LOG_FILE=./test/logs/test.log