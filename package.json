{
  "name": "api-driven-launch-platform",
  "version": "0.1.0",
  "description": "An open-source, API-first, and distributed/federated platform for launching digital products",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "mocha test/**/*.test.js --recursive",
    "test:watch": "mocha test/**/*.test.js --recursive --watch",
    "test:coverage": "c8 mocha test/**/*.test.js --recursive",
    "test:integration": "mocha --config .mocharc.integration.json",
    "test:integration:watch": "mocha --config .mocharc.integration.json --watch",
    "test:integration:coverage": "c8 mocha --config .mocharc.integration.json",
    "test:unit": "mocha test/services/**/*.test.js test/api/**/*.test.js test/i18n/**/*.test.js --recursive",
    "test:all": "pnpm test:unit && pnpm test:integration",
    "test:all:coverage": "c8 pnpm test:all",
    "lint": "eslint src/ test/ --ext .js",
    "lint:fix": "eslint src/ test/ --ext .js --fix",
    "format": "prettier --write src/ test/ *.js *.json *.md",
    "format:check": "prettier --check src/ test/ *.js *.json *.md",
    "start": "node build/index.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js"
  },
  "dependencies": {
    "@stripe/stripe-js": "^7.4.0",
    "@supabase/supabase-js": "^2.39.0",
    "@sveltejs/kit": "^2.0.0",
    "bcryptjs": "^3.0.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "express-winston": "^4.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "openai": "^4.24.0",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.0.0",
    "puppeteer": "^24.12.1",
    "sharp": "^0.33.0",
    "stripe": "^14.21.0",
    "svelte": "^4.2.8",
    "svelte-i18n": "^4.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "systeminformation": "^5.27.7",
    "uuid": "^11.1.0",
    "vite": "^5.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^2.1.2",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "mocha": "^10.2.0",
    "nock": "^13.5.6",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "sinon": "^21.0.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "product-hunt",
    "launch-platform",
    "api-first",
    "federated",
    "p2p",
    "sveltekit",
    "supabase",
    "ai-powered"
  ],
  "author": "ADLP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/api-driven-launch-platform.git"
  }
}
